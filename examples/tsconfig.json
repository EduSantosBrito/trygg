{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "effect-ui",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "effect-ui": ["../src/index.ts"],
      "effect-ui/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../src/**/*.ts"]
}
