{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "effect-ui",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "effect-ui": ["../src/index.ts"],
      "effect-ui/router": ["../src/router/index.ts"],
      "effect-ui/vite-plugin": ["../src/vite-plugin.ts"],
      "effect-ui/jsx-runtime": ["../src/jsx-runtime.ts"],
      "effect-ui/jsx-dev-runtime": ["../src/jsx-dev-runtime.ts"]
    }
  },
  "include": [
    "./**/*.ts", 
    "./**/*.tsx", 
    "../src/**/*.ts",
    "../src/**/*.d.ts"
  ],
  "exclude": [
    "vite.config.ts"
  ]
}
