{
  "include": ["src/**/*"],
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "#jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Path mapping for JSX runtime
    "baseUrl": ".",
    "paths": {
      "#jsx/jsx-runtime": ["./src/jsx-runtime.ts"],
      "#jsx/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "trygg": ["./src/index.ts"],
      "trygg/router": ["./src/router/index.ts"],
      "trygg/vite-plugin": ["./src/vite/plugin.ts"],
      "trygg/jsx-runtime": ["./src/jsx-runtime.ts"],
      "trygg/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,

    // Source maps for debugging
    "sourceMap": true,

    // Effect Language Service
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  }
}
