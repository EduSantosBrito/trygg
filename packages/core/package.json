{
  "name": "trygg",
  "version": "0.0.1",
  "description": "Effect-native UI framework with JSX support and fine-grained reactivity",
  "keywords": [
    "effect",
    "framework",
    "jsx",
    "reactive",
    "signals",
    "typescript",
    "ui"
  ],
  "homepage": "https://github.com/EduSantosBrito/trygg#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EduSantosBrito/trygg.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/types.d.ts",
      "import": "./dist/api.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "import": "./dist/router.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite/plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    }
  },
  "scripts": {
    "prepare": "effect-language-service patch",
    "build": "rm -rf dist && rolldown -c && tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "effect:check": "effect-language-service diagnostics --project tsconfig.json",
    "test": "npx vitest run",
    "test:watch": "npx vitest"
  },
  "dependencies": {
    "@effect-atom/atom": "^0.4.13",
    "consola": "^3.4.2"
  },
  "devDependencies": {
    "@effect/language-service": "^0.72.0",
    "@effect/platform-bun": "^0.87.0",
    "@effect/platform-node": "^0.87.0",
    "@effect/sql": "^0.49.0",
    "@effect/sql-sqlite-bun": "^0.50.0",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "latest",
    "happy-dom": "^20.3.1",
    "rolldown": "^1.0.0-rc.1",
    "vite": "^6.0.0",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "@effect/platform": "^0.94.1",
    "@effect/platform-browser": "^0.74.0",
    "@effect/platform-bun": "^0.87.0",
    "@effect/platform-node": "^0.87.0",
    "effect": "^3.19.15",
    "typescript": "^5",
    "vite": "^5.0.0 || ^6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependenciesMeta": {
    "@effect/platform-browser": {
      "optional": true
    },
    "@effect/platform-bun": {
      "optional": true
    },
    "@effect/platform-node": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
