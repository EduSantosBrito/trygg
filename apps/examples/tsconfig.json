{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "trygg",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "trygg": ["../../packages/core/src/index.ts"],
      "trygg/router": ["../../packages/core/src/router/index.ts"],
      "trygg/vite-plugin": ["../../packages/core/src/vite-plugin.ts"],
      "trygg/jsx-runtime": ["../../packages/core/src/jsx-runtime.ts"],
      "trygg/jsx-dev-runtime": ["../../packages/core/src/jsx-dev-runtime.ts"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts", ".trygg/**/*.ts"],
  "exclude": ["vite.config.ts"]
}
