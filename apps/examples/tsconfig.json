{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "effect-ui",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "effect-ui": ["../../packages/core/src/index.ts"],
      "effect-ui/router": ["../../packages/core/src/router/index.ts"],
      "effect-ui/vite-plugin": ["../../packages/core/src/vite-plugin.ts"],
      "effect-ui/jsx-runtime": ["../../packages/core/src/jsx-runtime.ts"],
      "effect-ui/jsx-dev-runtime": ["../../packages/core/src/jsx-dev-runtime.ts"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../../packages/core/src/**/*.ts",
    "../../packages/core/src/**/*.d.ts"
  ],
  "exclude": ["vite.config.ts"]
}
